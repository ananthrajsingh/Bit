<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval"
            >
            <solid
                android:color="@color/white"/>
            <size
                android:height="180dp"
                android:width="180dp"/>
        <stroke
            android:width="2dp"
            android:color="@color/green3"
            />
        <padding
            android:bottom="4dp"
            android:left="4dp"
            android:right="4dp"
            android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval"
            >
            <solid
                android:color="@color/green5"/>
            <size
                android:height="180dp"
                android:width="180dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/black"
                />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>